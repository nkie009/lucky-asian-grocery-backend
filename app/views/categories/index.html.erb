<h1>Category Index Page</h1>

<%= link_to 'Add New Category', new_category_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |p| %>
      <tr>
        
        <td><%= p.name %></td>
        <td><%= link_to 'Edit', edit_category_path(p) %></td>
        <td><%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


