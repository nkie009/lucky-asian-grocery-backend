<h1>Product Index Page</h1>

<%= link_to 'Add New Product', new_product_path %>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @products.each do |p| %>
      <tr>
      
       <td> <%= cl_image_tag p.image %> </td>

        <td><%= p.name %></td>
        <td>$<%= p.price %></td>
        <td><%= p.stock %></td>
        <td><%= p.category.name %></td>
        <td><%= link_to 'Show', product_path(p.id) %></td>
        <td><%= link_to 'Edit', edit_product_path(p) %></td>
        <td><%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


